<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/container"
        android:background="#444444"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
                        
        <TextView 
            android:textSize="18sp"
            android:id="@+id/ft_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Font Size: "
	        android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"/>
        
        <NumberPicker
            android:id="@+id/ft_size_spinner"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/ft_size"
	        android:layout_width="match_parent"
    	    android:layout_height="wrap_content"/>
        
        <TextView 
            android:textSize="18sp"
            android:id="@+id/ft_color"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ft_size_spinner"
            android:text="Font Color: "
	        android:layout_width="match_parent"
    	    android:layout_height="wrap_content"/>
        
        <TextView 
            android:textSize="18sp"
            android:id="@+id/ft_bg_color"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ft_color"
            android:text="Background Color: "
	        android:layout_width="match_parent"
    	    android:layout_height="wrap_content"/>        
        
    </RelativeLayout>
    

</merge>